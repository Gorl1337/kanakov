#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main()
{
	double a = 0, b = 0, c = 0, p = 0;
	int min = 0, max = 0, d = 0, n = 0, i = 0, j = 0;

	printf("Enter Min:");
	scanf_s("%d", &min);

	printf("Enter Max:");
	scanf_s("%d", &max);

	if (max - min < 1)
	{
		printf("error");
		return 0;
	}

	printf("Enter the number of items:");
	scanf_s("%d", &n);

	if (n < 1)
	{
		printf("error");
		return 0;
	}

	for (i = 0; i < n; i++)
	{
		a = rand();
		b = (a / RAND_MAX) * (max - min) + min;
		d = pow(10, 6) * modf(b, &p);

		while (j < n)
		{
			if (d <= n)
			{
				c -= b;
				break;
			}
			else
			{
				c += b;
				break;
			}
			j++;
		}
	}
	printf("Sum=%lf", c);
	return 0;
}
